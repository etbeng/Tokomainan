<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".detil_GithubUser">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imgFotoDetil"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvUserID"
        android:text="User ID"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/imgFotoDetil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama User"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/tvUserDetil"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="@id/tvUserID"
        app:layout_constraintStart_toStartOf="@id/tvUserID"
        app:layout_constraintTop_toBottomOf="@+id/tvUserID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEmail"
        android:text="email.com"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvUserDetil"
        app:layout_constraintStart_toStartOf="@id/tvUserDetil"
        app:layout_constraintBottom_toTopOf="@id/btn_Follow"
        app:layout_constraintEnd_toEndOf="@id/tvUserDetil"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:backgroundTint="@color/white"
        android:id="@+id/btn_Follow"
        android:text="Follow"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvFwerDetil"
        android:text="99 Followers"
        android:paddingRight="16dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/btn_Follow"
        app:layout_constraintTop_toBottomOf="@id/btn_Follow"
        app:layout_constraintEnd_toStartOf="@id/tvFwingDetil"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvFwingDetil"
        android:textSize="14sp"
        android:paddingRight="16dp"
        android:layout_marginTop="10dp"
        android:text="99 Following"
        app:layout_constraintStart_toEndOf="@id/tvFwerDetil"
        app:layout_constraintTop_toBottomOf="@id/btn_Follow"
        app:layout_constraintEnd_toEndOf="@id/tvRepoDetil"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRepoDetil"
        android:text="99 Repositories"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/tvFwingDetil"
        app:layout_constraintTop_toBottomOf="@id/btn_Follow"
        app:layout_constraintEnd_toEndOf="@id/btn_Follow"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblCompanyDetil"
        android:text="Company"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvFwingDetil"
        app:layout_constraintStart_toStartOf="@id/btn_Follow"
        app:layout_constraintEnd_toEndOf="@id/btn_Follow"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvPTDetil"
        android:text="Nama Perusahaan"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/lblCompanyDetil"
        app:layout_constraintStart_toStartOf="@id/btn_Follow"
        app:layout_constraintEnd_toEndOf="@id/btn_Follow"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblLocationDetil"
        android:text="Location"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvPTDetil"
        app:layout_constraintStart_toStartOf="@id/btn_Follow"
        app:layout_constraintEnd_toEndOf="@id/btn_Follow"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvLokasiDetil"
        android:text="Lokasi Perusahaan"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/lblLocationDetil"
        app:layout_constraintStart_toStartOf="@id/btn_Follow"
        app:layout_constraintEnd_toEndOf="@id/btn_Follow"/>

</androidx.constraintlayout.widget.ConstraintLayout>